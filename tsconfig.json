{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "node16",
    "target": "esnext",
    "declaration": true,
    "types": ["bun-types"],
    "lib": ["esnext"],
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "outDir": "./output",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "files": ["index.ts"],
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "__spec_"]
}
